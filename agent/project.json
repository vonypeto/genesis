{
  "name": "@genesis/agent",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "agent/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/agent",
        "commands": ["rollup -c agent/rollup.config.mjs"],
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "command": "node dist/agent/agent/src/main.js",
        "color": true
      },
      "configurations": {
        "development": {
          "command": "node --watch dist/agent/agent/src/main.js"
        },
        "production": {
          "command": "node dist/agent/agent/src/main.js"
        }
      }
    },
    "serve:app": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "MODE=app node dist/agent/agent/src/main.js",
        "color": true
      }
    },
    "serve:asyncevent": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "MODE=asyncevent node dist/agent/agent/src/main.js",
        "color": true
      }
    },
    "serve:async": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "MODE=async KAFKA_BROKERS=localhost:9092 node dist/agent/agent/src/main.js",
        "color": true
      }
    },
    "infra:up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up -d redpanda redis",
        "cwd": "genesis",
        "color": true
      }
    },
    "infra:down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose down",
        "cwd": "genesis",
        "color": true
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon --watch src --ext ts,tsx --exec \"node -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts\"",
        "color": true,
        "cwd": "agent"
      }
    },
    "dev:app": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon --watch src --ext ts,tsx --exec \"MODE=app node -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts\"",
        "color": true,
        "cwd": "agent"
      }
    },
    "dev:async": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon --watch src --ext ts,tsx --exec \"MODE=async KAFKA_BROKERS=localhost:9092 node -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts\"",
        "color": true,
        "cwd": "agent"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["oxlint --fix --tsconfig=./tsconfig.json src/"],
        "cwd": "agent"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "agent/jest.config.cts",
        "passWithNoTests": true
      }
    }
  }
}
