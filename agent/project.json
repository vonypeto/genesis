{
  "name": "@llm-visibility-mono/agent",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "agent/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/agent",
        "commands": ["rollup -c agent/rollup.config.mjs"],
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "command": "node dist/agent/agent/src/main.js",
        "color": true
      },
      "configurations": {
        "development": {
          "command": "node --watch dist/agent/agent/src/main.js"
        },
        "production": {
          "command": "node dist/agent/agent/src/main.js"
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon --watch src --ext ts,tsx --exec \"node -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts\"",
        "color": true,
        "cwd": "agent"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["oxlint --fix --tsconfig=./tsconfig.json src/"],
        "cwd": "agent"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "agent/jest.config.cts",
        "passWithNoTests": true
      }
    }
  }
}
