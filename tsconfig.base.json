{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "lib": ["es2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@llm/circuit-breaker": ["packages/circuit-breaker/src/index.ts"],
      "@llm/circuit-breaker/*": ["packages/circuit-breaker/src/*"],
      "@llm/decorators": ["packages/decorators/src/index.ts"],
      "@llm/decorators/*": ["packages/decorators/src/*"],
      "@llm/filters": ["packages/filters/src/index.ts"],
      "@llm/filters/*": ["packages/filters/src/*"],
      "@llm/interceptors": ["packages/interceptors/src/index.ts"],
      "@llm/interceptors/*": ["packages/interceptors/src/*"],
      "@llm/config": ["packages/config/src/index.ts"],
      "@llm/config/*": ["packages/config/src/*"],
      "@llm/repository": ["packages/repository/src/index.ts"],
      "@llm/repository/*": ["packages/repository/src/*"],
      "@llm/rate-limiter": ["packages/rate-limiter/src/index.ts"],
      "@llm/rate-limiter/*": ["packages/rate-limiter/src/*"],
      "@llm/redis": ["packages/redis/src/index.ts"],
      "@llm/redis/*": ["packages/redis/src/*"],
      "@llm/shared": ["packages/shared/src/index.ts"],
      "@llm/shared/*": ["packages/shared/src/*"],
      "@llm/types": ["packages/types/src/index.ts"],
      "@llm/types/*": ["packages/types/src/*"],
      "@llm/utils": ["packages/utils/src/index.ts"],
      "@llm/utils/*": ["packages/utils/src/*"]
    }
  }
}
